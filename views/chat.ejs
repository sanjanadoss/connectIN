<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script type="text/javascript">
    const username="<%=username%>"
    const roomid="<%=roomid%>"
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/chat.css">
  <title>ChatRoom</title>
</head>
<body>
  <div class="chat-container">
    <header class="chat-header">
      <div>
        <h1>Teams</h1>
      </div>
      <div class="right__btn">
        <a href="/<%=roomid%>?username=<%=username%>" class="btn join_leave_btn">Join Meeting</a>
        <a href="/" class="btn join_leave_btn">Leave Room</a>
      </div>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">
        <h3><i class="fas fa-comments"></i> ROOM ID</h3>
        <h2 id="room-name"></h2>
        <h3><i class="fas fa-users"></i> USERS</h3>
        <ul id="users">
        </ul>
      </div>
      <div class="chat-messages">
        <% newListItems.forEach(function(element){  %>
          <div class="message">
            <p class="meta"><%=element.username%> <span><%=element.time%></span></p>
            <p class="text">
              <%=element.text%>
            </p>
          </div>
      <%  }) %>
      </div>
    </main>
    <div class="chat-form-container">
      <form id="chat-form" action="/Chat/<%=roomid%>/<%=username%>" method="post">
        <input
          id="msg"
          type="text"
          name="msg"
          placeholder="Enter Message"
          required
          autocomplete="off"
        />
        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
      </form>
    </div>
  </div>
  <script type="text/javascript" src="/main.js"></script>
</body>
</html>
