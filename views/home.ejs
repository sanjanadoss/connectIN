<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Teams</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/home.css">
</head>

<body>
  <div class="main__display">
    <div class="buttons">
      <h1 class="BigHeading">Teams</h1>
      <p class="subHeading">Meet, Chat and Call in one place</p>
      <br>
      <br>
      <button class="sj__button" onclick="startChat()">New Chat Room</button>
      <br>
      <br>
      <input class="joinId" type="text" name="" placeholder="Enter Room ID">
      <br>
      <button class="sj__button join" onclick="joinChat()">Join Chat Room</button>
    </div>
    <div class="side__image">
    </div>
  </div>
  <script type="text/javascript">
    const ROOM_ID = "<%= roomid %>";

    function startChat() {
      location.assign("/Chat/"+`${ROOM_ID}`);
    }

    function joinChat() {
      let rid = $('input');
      if (rid.val().length != 0) {
        location.assign("/Chat/"+`${rid.val()}`);
        rid.val('');
      }
    }
  </script>
</body>

</html>
